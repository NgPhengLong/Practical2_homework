<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_weight="1"
        android:background="#6EB571"
        android:gravity="center"
        android:text="@string/name"
        android:textSize="150sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/reset_zero"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="109dp"
        android:layout_height="62dp"
        android:layout_margin="30dp"
        android:background="#4CAF50"
        android:onClick="countUp"
        android:text="@string/count_text"
        android:textColor="#F3EFEF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_zero" />

    <Button
        android:id="@+id/button_toast"
        android:layout_width="109dp"
        android:layout_height="62dp"
        android:layout_margin="30dp"
        android:background="#4CAF50"
        android:onClick="showToast"
        android:text="@string/toast_value"
        android:textColor="#ECEDF1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset_zero"
        android:layout_width="109dp"
        android:layout_height="62dp"
        android:layout_margin="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:background="#4CAF50"
        android:onClick="resetZero"
        android:text="@string/reset_zero"
        android:textColor="#F3EFEF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toast" />

</androidx.constraintlayout.widget.ConstraintLayout>